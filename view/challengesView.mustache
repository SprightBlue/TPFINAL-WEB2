<main class="container mt-5">
    <h1 class="text-center mb-4">Historial de Partidas</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Desafíos Pendientes</h3>
            {{#pendingChallenges}}
                <div class="card mb-3">
                    <div class="card-body">
                        <p>Desafío pendiente de <strong>{{challenger_username}}</strong>.</p>
                        <form method="post" action="/challenge/acceptChallenge">
                            <input type="hidden" name="challengeId" value="{{id}}">
                            <button type="submit" name="aceptar" id="aceptar" class="btn btn-primary">Aceptar desafío</button>
                        </form>
                    </div>
                </div>
            {{/pendingChallenges}}
            {{^pendingChallenges}}
                <div class="alert alert-info">
                    Aún no tienes desafíos pendientes.
                </div>
            {{/pendingChallenges}}
        </div>
        <div class="col-md-6">
            <h3>Resultados de Desafíos</h3>
            {{#allChallenges}}
                <div class="card mb-3 {{#isWon}}bg-success text-white{{/isWon}}{{#isLost}}bg-danger text-white{{/isLost}}{{#isTied}}bg-warning text-dark{{/isTied}}">
                    <div class="card-body text-center">
                        <p><strong>{{challenger_username}} ({{challenger_score}}) vs {{challenged_username}} ({{challenged_score}})</strong></p>
                    </div>
                </div>
            {{/allChallenges}}
        </div>
    </div>
</main>
