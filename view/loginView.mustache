<main>
    <div class="container my-5">
        {{#mail}}
            <div class="alert alert-warning alert-dismissible fade show my-5 mx-5">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Verificar: </strong>{{mail}}
            </div>
        {{/mail}}
        {{#verify}}
            <div class="alert alert-warning alert-dismissible fade show my-5 mx-5">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Activo: </strong>{{verify}}
            </div>
        {{/verify}}           
        <div class="row d-flex flex-column justify-content-center align-items-center">  
            <div class="col-sm-6 border border-1 rounded" style="background-color: #F9AD30">
                <form class="p-5" action="/login/get" method="POST">
                    <h2 class="text-center mb-3">Iniciar Sesión</h2>
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" name="username" id="username" placeholder="Ingresar nombre de usuario" required>
                        <label for="email">Nombre de Usuario</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" type="password" name="pass" id="pass" placeholder="Ingresar contraseña" required>
                        <label for="password">Contraseña</label>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 d-flex flex-column justify-content-center align-items-center">
                            <div class="d-flex flex-column justify-content-center align-items-center">
                                <input class="btn btn-dark" type="submit" name="enviar" id="enviar" value="Ingresar">
                            </div>
                        </div>
                        <div class="col-sm-6 d-flex flex-column justify-content-center align-items-center">
                            <div class="d-flex flex-column justify-content-center align-items-center">
                                <p class="text-dark">¿No tienes una cuenta?</p>
                                <a class="btn btn-dark" href="/register/read">Regístrate aquí</a>
                            </div>
                        </div>
                    </div>
                    {{#errors}}
                        {{#validations}}
                            <div class="alert alert-danger my-2">{{validations}}</div>
                        {{/validations}}
                        {{#active}}
                            <div class="alert alert-danger my-2">{{active}}</div>
                        {{/active}}
                    {{/errors}}
                </form>
            </div>
        </div>
    </div> 
</main>
 