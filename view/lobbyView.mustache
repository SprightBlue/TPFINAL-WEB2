{{#usuario}}
    <div class="container my-5" style="min-height:60vh;">
        <h2 class="text-center text-dark">Bienvenido al Lobby!!!</h2>
        <div class="row d-flex align-items-center">
            <div class="col-sm-3 d-flex flex-column justify-content-center my-3">
                <img class="img-fluid rounded" src="/{{profilePicture}}" alt="profilePicture">
            </div>
            <div class="col-sm-9">
                <div class="card bg">
                    <div class="card-body">
                        <h4 class="card-title text-dark">{{username}}</h4>
                        <h5 class="card-title text-dark">Ranking Score: <span class="badge bg-dark">1000</span></h5>
                        <a class="btn btn-dark" href="/play/read">Nueva Partida</a>
                        <a class="btn btn-dark">Ranking</a>
                    </div>
                </div>  
            </div>
        </div>        
    </div>
{{/usuario}}


